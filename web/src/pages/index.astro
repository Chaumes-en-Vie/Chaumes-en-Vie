      <div class="footer">
        <div class="frise-scroll-container">
          <div class="frise-scroll-track">
            <img src={friseSrc} alt="Frise Chaumes en Vie" class="frise" />
            <img src={friseSrc} alt="Frise Chaumes en Vie" class="frise" />
          </div>
        </div>
        <div class="yline"></div>
      </div>

    </main>

    <style>
      :root {
        --cv-yellow: #f4a300;
        --cv-green: #007a3d;
        --cv-blue: #008fbf;
        --cv-red: #c9184a;
      }

      /* Reset */
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: system-ui, -apple-system, "Segoe UI", sans-serif;
        background: #ffffff;
        color: #334155;
      }

      html, body {
        height: 100%;
      }

      /* Page */
      .page {
        position: relative;
        min-height: 100vh;          
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; /* plus de centrage vertical global */
        overflow: hidden;  
      }

      /* Blobs */
      .blob {
        position: absolute;
        border-radius: 999px;
        filter: blur(40px);
        opacity: 0.55;
        z-index: 0;
      }
      .blob-yellow {
        width: 220px;
        height: 220px;
        background: var(--cv-yellow);
        top: -60px;
        left: -60px;
      }
      .blob-blue {
        width: 260px;
        height: 260px;
        background: var(--cv-blue);
        bottom: -100px;
        right: -60px;
      }
      .blob-green {
        width: 200px;
        height: 200px;
        background: var(--cv-green);
        top: 50%;
        right: 6%;
      }

      /* Logo */
      .logo-wrapper {
        position: relative;
        z-index: 1;
        padding: 32px;
        border-radius: 999px;
        background: #ffffffcc;
        backdrop-filter: blur(6px);
        box-shadow: 0 22px 50px rgba(15, 23, 42, 0.28);
        animation: float 6s ease-in-out infinite;
        margin-bottom: 50px;        
        margin-top: 30px;
      }
      .logo {
        width: min(260px, 70vw);
        height: auto;
        display: block;
      }

      /* Bords arrondis */
      .rounded {
        border-radius: 80px;
        overflow: hidden;
      }

      /* Texte teaser */
      .soon {
        position: relative;
        margin-top: 20px;
        z-index: 1;
        font-size: 1rem;
        line-height: 1.6;
        color: #475569;
        text-align: center;
        max-width: 32rem;
        animation: fadeIn 2.2s ease-out forwards;
      }

      .soon-main {
        display: block;
        font-size: 0.95rem;
        color: #64748b;
      }

      .highlight {
        color: var(--cv-green);
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.03em;
        display: inline-block;
        margin-top: 4px;
      }

      /* ============================ */
      /* ðŸ†• Frise dÃ©filante horizontale */
      /* ============================ */

      .footer {
        width: 100%;
        margin-top: auto;   
      }
      .frise-scroll-container {
        width: 100%;
        overflow: hidden;
        margin-top: 40px;
        line-height: 0;
        z-index: 2;
        position: relative;
      }

      .frise-scroll-track {
        display: flex;
        width: calc(2755px * 2);
        animation: scrollFrise 45s linear infinite;
      }

      .frise {
        width: 2755px;
        height: auto;
        flex-shrink: 0;
        pointer-events: none;
        user-select: none;
        display: block; 
        margin-top: auto;
      }

      .yline {
        width: 100%;
        height: 12px;
        background: #f4a300;
        z-index: 4;
        position: relative;
        margin: 0;
        margin-top: auto;
      }

      @keyframes scrollFrise {
        0% { transform: translateX(0); }
        100% { transform: translateX(-2755px); }
      }

      /* Mobile */
      @media (max-width: 800px) {
        .frise {
          width: 1600px;
        }

        .frise-scroll-track {
          width: calc(1600px * 2);
          animation-duration: 38s;
        }

        @keyframes scrollFrise {
          0% { transform: translateX(0); }
          100% { transform: translateX(-1600px); }
        }
      }

      /* Animations couleurs */
      @keyframes colorCycle {
        0% { color: var(--cv-yellow); }
        25% { color: var(--cv-green); }
        50% { color: var(--cv-blue); }
        75% { color: var(--cv-red); }
        100% { color: var(--cv-yellow); }
      }
      .animate-colors {
        animation: colorCycle 20s ease-in-out infinite;
      }

      @keyframes float {
        0% { transform: translateY(0px) scale(1); }
        50% { transform: translateY(-10px) scale(1.015); }
        100% { transform: translateY(0) scale(1); }
      }

      @keyframes fadeIn {
        0% {
          opacity: 0;
          transform: translateY(8px);
          filter: blur(6px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
          filter: blur(0);
        }
      }
    </style>
  </body>
</html>
