    <link rel="manifest" href="/site.webmanifest">
  </head>
  <body>
    <main class="page">
      <!-- Blobs de couleur -->
      <div class="blob blob-yellow"></div>
      <div class="blob blob-blue"></div>
      <div class="blob blob-green"></div>

      <!-- Logo -->
      <div class="logo-wrapper">
        <img src={logoSrc} alt="Logo Chaumes en Vie" class="logo rounded" />
      </div>

      <!-- Texte teaser -->
      <p class="soon">
        <span class="soon-main">
          Redonnons vie Ã  Chaumes : il est temps dâ€™agir !
        </span>
        <br />
        <span class="highlight animate-colors">
          Une nouvelle dynamique arrive.
        </span>
      </p>

